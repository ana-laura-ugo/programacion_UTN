<div class="container-novedades">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 class="titulo-novedades">Modificar la novedad</h4>
            <form action="/admin/novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{novedad.id}}" name="id">
                <div class="form-group">
                    <label for="">Titulo</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
                <div class="form-group">
                    <label for="">Subtitulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                </div>
                <div class="form-group">
                    <p>
                        <labe>Imagen: <input type="file" name="imagen" id="imagen" /></label>
                    </p>
                    <p>
                        <label> <input type="checkbox" name="img_delete" id="img_delete" value="1"> Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="img_original" value="{{novedad.img_id}}">
                    </p>
                </div>

                <div class="form-group">
                    <label for="">Cuerpo</label>
                    <textarea name="cuerpo" class="form-control">{{novedad.cuerpo}} </textarea>

                </div>


                <div class="btn-guardarnovedad">

                    <button id="btnguardarnovedad" type="submit" class="btn btn-primary"> Modificar
                    </button>
                </div>
            </form>
            {{#if error}}
            <p class="errornovedades"><strong>{{message}}</strong> </p>
            {{/if}}
        </div>
    </div>
</div>