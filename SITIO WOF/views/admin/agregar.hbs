<div class="container-novedades">
    <div class="row">
        <div class="col-6 offset-3">
            <h4 class="titulo-novedades">Agregar una nueva novedad</h4>
            <form action="/admin/novedades/agregar" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
               <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Subtitulo" name="subtitulo"></textarea>
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Cuerpo" name="cuerpo"></textarea>
                </div>
                <div class="btn-guardarnovedad">
                    <div class="form-group">
                        <label>Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                    </div>

                    <button id="btnguardarnovedad" type="submit" class="btn btn-primary"> Guardar
                    </button>
                </div>
            </form>
            {{#if error}}
            <p class="errornovedades"><strong>{{message}}</strong></p>
{{/if}}

        </div>

    </div>
</div>