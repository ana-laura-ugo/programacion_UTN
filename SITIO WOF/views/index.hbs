{{!-- inicio novedades --}}

<div id="novedadescontenedor">
    <h2 class="titulonovedades">Novedades</h2>
    <ul class="novedades">
        {{#each novedades}}

        <li><a href="#" data-bs-toggle="modal" data-bs-target="#exampleModal{{id}}"><img
                    src="/images/novedades/novedades1.jpg " alt="voluntarios">{{titulo}}</a></li>
{{/each}}
       

    </ul>

</div>


{{!-- fin novedades --}}

{{!-- inicio modal --}}
{{#each novedades}}
<div class="modal fade" id="exampleModal{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">{{titulo}} 1 </h1>

       
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
         <h3>{{subtitulo}}</h3>
        <p>{{cuerpo}}</p>
       
      </div>
    </div>
  </div>
</div>
{{/each}}

{{!-- fin modal --}}

