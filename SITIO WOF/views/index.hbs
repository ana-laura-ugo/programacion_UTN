            <select name="mascota">
                <!-- MI PERRO ES -->
                <option>PERRO</option>
                <option>GATO</option>
                <option>OTRO</option>
            </select>

            <!-- SEXO MASCOTA -->
            <select name="sexo">
                <option>MACHO</option>
                <option>HEMBRA</option>
            </select>


            <input type="text" placeholder="NOMBRE MASCOTA" name="nombremascota">

